---
import NavBar from "@/components/shared/NavBar.astro";
import Brand from "./Brand.astro";
import Bars from "./Bars.astro";
---

<header class="Header">
	<div class="Container">
		<Brand />
		<Bars />
		<NavBar />
	</div>
</header>

<style lang="scss">
	.Header {
		background: var(--ui-black);
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		display: flex;
		flex-flow: row wrap;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		top: 0;
		z-index: 2;
		width: 100vw;
		height: 70px;
		padding: 0;
	}
</style>
