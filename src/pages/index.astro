---
// import { getCollection } from "astro:content";
import config from "@/data/config";
import PagesLayout from "@/layouts/PagesLayout.astro";
import Hero from "@/components/Hero.astro";
import CardsContainer from "@/components/shared/CardsContainer.astro";
import PlanCard from "@/components/shared/PlanCard.astro";
import SectionHeading from "@/components/shared/SectionHeading.astro";
import Button from "@/components/shared/Button.astro";
import Carousel from "@/components/shared/Carousel.astro";

const classes = [
	"Yellow",
	"Green",
	"Purple",
	"LightBlue",
	"DarkGreen",
	"Orange",
	"LightOrange",
];

const seoData = {
	title: "Inicio - Peras con Harina",
	description:
		"Bienvenido a Peras con Harina. Creamos páginas Web económicas para PYMES: Conoce y elige el mejor plan para ti.",
	keywords: [
		"Páginas web económicas",
		"Páginas web para PYMES",
		"Páginas Web de alta calidad",
	],
	canonicalUrl: "https://www.perasconharina.com/",
	ogType: "website",
	ogTitle: "Inicio - Peras con Harina",
	ogDescription:
		"Bienvenido a Peras con Harina. Creamos páginas Web económicas para PYMES: Conoce y elige el mejor plan para ti.",
	ogImage: "https://www.perasconharina.com/screenshot.png",
	ogImageAlt: "Captura de pantalla de Peras con Harina",
	twitterCard: "summary_large_image",
	twitterTitle: "Inicio - Peras con Harina",
	twitterDescription:
		"Bienvenido a Peras con Harina. Creamos páginas Web económicas para PYMES: Conoce y elige el mejor plan para ti.",
	twitterImage: "https://www.perasconharina.com/screenshot.png",
};
---

<PagesLayout seo={seoData}>
	<Hero />

	<SectionHeading
		title="Elige tu plan"
		description="Tenemos un Plan adecuado para cada tipo de negocio ¡Paga hasta en 6 cuotas 💳!"
	/>
	<div class="Container">
		<CardsContainer>
			{
				config.plans.slice(0, 3).map((plan, index) => (
					<PlanCard
						price={plan.price}
						title={plan.name}
						description={plan.description}
						classes={classes[index % classes.length]}
						tag={plan.tag}
						features={plan.features}>
						{/* <a href={`/plans/${plan.slug}`} class="Button Button-sm Orange">
							Lo quiero!
						</a> */}
						<a href="/contact" class="Button Button-sm Orange">
							Lo quiero!
						</a>
					</PlanCard>
				))
			}
		</CardsContainer>
		<SectionHeading title="Conoce algunos de nuestros proyectos" />
		<Carousel />
		<SectionHeading
			title="¿Buscas más opciones de planes?"
			description="Conoce todos nuestros planes">
			<Button
				text="Ver todos los planes"
				url="/plans"
				classes="Button Button-l Orange"
			/>
		</SectionHeading>
	</div>
</PagesLayout>
