---
// import { getCollection } from "astro:content";
import config from "@/data/config";
import PagesLayout from "@/layouts/PagesLayout.astro";
import Hero from "@/components/Hero.astro";
import CardsContainer from "@/components/shared/CardsContainer.astro";
import PlanCard from "@/components/shared/PlanCard.astro";
import SectionHeading from "@/components/shared/SectionHeading.astro";
import Button from "@/components/shared/Button.astro";
import Carousel from "@/components/shared/Carousel.astro";

const classes = [
	"Yellow",
	"Green",
	"Purple",
	"LightBlue",
	"DarkGreen",
	"Orange",
	"LightOrange",
];
---

<PagesLayout
	image="/screenshot.png"
	title="Perasconharina - Páginas Web económicas para PYMES"
	description="Expertos en diseño y desarrollo Web a tu servicio. Creamos páginas Web para PYMES de manera profesional.">
	<Hero />

	<SectionHeading
		title="Elige tu plan"
		description="Tenemos un Plan adecuado para cada tipo de negocio ¡Paga hasta en 6 cuotas 💳!"
	/>
	<div class="Container">
		<CardsContainer>
			{
				config.plans.slice(0, 3).map((plan, index) => (
					<PlanCard
						price={plan.price}
						title={plan.name}
						description={plan.description}
						classes={classes[index % classes.length]}
						tag={plan.tag}
						features={plan.features}>
						{/* <a href={`/plans/${plan.slug}`} class="Button Button-sm Orange">
							Lo quiero!
						</a> */}
						<a href="/contact" class="Button Button-sm Orange">
							Lo quiero!
						</a>
					</PlanCard>
				))
			}
		</CardsContainer>
		<SectionHeading title="Conoce algunos de nuestros proyectos" />
		<Carousel />
		<SectionHeading
			title="¿Buscas más opciones de planes?"
			description="Conoce todos nuestros planes">
			<Button
				text="Ver todos los planes"
				url="/plans"
				classes="Button Button-l Orange"
			/>
		</SectionHeading>
	</div>
</PagesLayout>
